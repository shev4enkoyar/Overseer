@page "/projects"

<MudContainer Class="py-4 py-sm-8 py-md-12 py-lg-16 py-xl-20">
	<MudGrid>
		<MudItem xs="12">
			<MudGrid Class="mb-8">
				<MudItem xs="12" md="6">
					<MudText Typo="Typo.h2" Class="mud-typography-h4 mb-2">Projects</MudText>
					<MudSkeleton Animation="Animation.False" SkeletonType="SkeletonType.Rectangle" Height="4px"
					             Width="20%"/>
				</MudItem>
				<MudItem xs="12" md="6">
					<MudText Typo="Typo.body1">
						Here are the projects created by you or available to you. Projects are groups of containers
						united by one business ideology.
					</MudText>
				</MudItem>
			</MudGrid>
		</MudItem>
		@foreach (var project in ProjectPage.Items)
		{
			<MudItem xs="12" sm="6" md="3">
				<MudCard  id="@($"card-{project.Id}")" Style="height: 100%; cursor: pointer" Square="true" @onclick="() => OnProjectItemClick(project.Id)">
					<MudCardMedia Image="https://dummyimage.com/700x400/" Height="160"/>
					<MudCardContent>
						<MudChip Size="Size.Small" T="string">test</MudChip>
						<MudText Typo="Typo.h6" Class="mb-4">@project.Name</MudText>
						<MudText Typo="Typo.body2">@project.Description</MudText>
					</MudCardContent>
				</MudCard>
			</MudItem>
			<MudAnimate Selector="@($"#card-{project.Id}")" Duration="0.2" AnimationType="AnimationType.Scale" Value="1.05" 
			            ValueSecondary="1" Hover="true" AnimationTiming="AnimationTiming.EaseIn" 
			            AnimationFillMode="AnimationFillMode.Forwards" />
		}
	</MudGrid>
</MudContainer>
